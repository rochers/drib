
# internal vars
src = ./
dest = /home/bolt/share/htdocs/test


# meta data
meta PROJECT = drib
meta NAME = test
meta VERSION = file:changelog
meta SUMMARY = This is my summary
meta DESCRIPTION = This is my long description
meta CHANGELOG = changelog


# depends
depend cpan/JSON
depend yum/httpd

#set 
set world yes
set test hello


# directory
dir - - - /home/test 


# file,find,glob
file - - - $(dest) ./test.html
find - - - /home/test $(src) -depth -name "*.html"


# settings file
settings /home/test/ test.conf


# cron
cron 59 * * * * /home/bolt/libexec/platform/ingest/kickoff.php > /home/bolt/logs/platform/ingest/last.lo
