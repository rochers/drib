# internal vars
$src = "";
$dest = ""; 

# meta data
NAME=test
VERSION=1.0
SUMMARY=This is my summary
DESCRIPTION=This is my long description
CHANGELOG=

# settings
set test=hello
set world=yes

# directory
dir - - - /home/test 

# file,find,glob
file - - - $dest ./test.html
find - - - /home/test ./ -depth -name "*.html" 
glob - - - /home/test ./*.html

# settings file
settings /home/test/text.conf ./test.conf

# commands
command pre-install "echo 'hello'";
command post-install "echo 'hello'";